<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjsu.td.mortgagecalculator.OutputFragment"
    >

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout5"
        android:layout_below="@id/payment">

        <TextView
            android:id="@+id/taxPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Tax Paid"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTaxPaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:id="@+id/textView14"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6"
        android:layout_below="@id/linearLayout5">

        <TextView
            android:id="@+id/interestPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Interest Paid"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etInterestPaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/textView15"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout7"
        android:layout_below="@id/linearLayout6">

        <TextView
            android:id="@+id/monthlyPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Payment"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMonthlyPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/textView16"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout8"
        android:layout_below="@id/linearLayout7">

        <TextView
            android:id="@+id/payOffDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Off Date"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPayOffDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
